[Unit]
Description=Processador de Cupons Fiscais com Ollama (FastAPI)
After=network.target

[Service]
User=fat
Group=fat
WorkingDirectory=/home/fat/projetos/cupom_ai
Environment="PATH=/home/fat/projetos/cupom_ai/venv/bin"
ExecStart=/home/fat/projetos/cupom_ai/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target